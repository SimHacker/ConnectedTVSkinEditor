    source="guiname"
  />

  <button
    x="65" y="1"
    width="28" height="13"
    active="0"
    framed="0"
    clock="1"
    source="showclock"
  />

  <button
    id="Category"
    label="Category"
    x="95" y="0"
    labeldx="1" labeldy="4"
    width="64" height="19"
    source="categoryname"
    style="4"
    pietouch="  Categories:Browse Categories"
    piedown="   Show List:ShowList"
    pieup="      Timeline:Timeline"
    look="7010" states="2" stretch="4"
