  title="Show Details"
  width="160"
  height="240"
  bottomedge="15"
  browser="ProgramDescriptions"
  pagetype="6"
  cellsperpage="1"
  cachetype="1"
  onback="gotopage ConnectedTV"
>

  <!--  Copyright 2002-2003 ConnectedMedia Corporation   --> 

  <button
    x="1" y="1"
