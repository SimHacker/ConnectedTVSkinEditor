<gui
  title="ConnectedTV"
  width="160"
  height="160"
  browser="Programs"
  pagetype="1"
  cachetype="1"
>

  <!--  Copyright 2002-2003 ConnectedMedia Corporation   --> 

  <button
    x="1" y="1"
    width="62" height="13"
    active="0"
    framed="0"
    source="guiname"
  />

  <button
    x="65" y="1"
    width="28" height="13"
    active="0"
    framed="0"
    clock="1"
    source="showclock"
  />

  <button
    label="Category"
    x="95" y="0"
    labeldx="1" labeldy="4"
    width="64" height="19"
    style="4"
    source="categoryname"

    pietouch="  Categories:Browse Categories"
    piedown="    Stations:gotopage Stations"
    pieleft="      cancel:"

    look="7010" states="2" stretch="4"
  />

  <button
    id="Description"
    label=""
    x="1" y="19"
    width="119" height="38"
    labeldx="1" labeldy="1"
    wrap="1"
    source="currentprogramdescription"

    xpieup="                      cancel:"
    xpietouch="           Watch This Channel:gotocurrentchannel"
    xpiedown="               Show Details:gotopage Show Details"

    pieright="                Next Page:scrollchannels 1"
    pieleft="               Previous Page:scrollchannels -1"

    xxpietouch="     DownStroke to Change Channels:gotopage Show Details"

    pieup=   ":"
    pietouch="              Show Details:gotopage Show Details"
    piedown ="              Show Details:gotopage Show Details"

    look="7012"  states="3" stretch="4"
  />

  <button
    label=""
    comment="ConnectedTV Icon button to tune show"
    x="120" y="18"
    width="39" height="38"
    labeldx="6" labeldy="8"
    xpieup="cancel:"
    pietouch="Tune Show:gotocurrentchannel"
    piedown="Last Chan:send Last"
    pieup="   cancel:"
    look="7021"  states="2" stretch="4"
    wrap="1"
  />

  <button
    label=""
    x="1" y="56"
    width="158" height="84"
    labeldx="0" labeldy="4"
    rows="4" columns="2"
    rowlayout="0"
    pager="1"
    style="3"
    source="programs"
    index="0"
    action="selectchannel"

    xpiedown="Watch:gotochannel"
    xpieup="Show Details:gotopage Show Details"

    piedown="Show Details:gotopage Show Details"
    pieleft="Previous Page:scrollchannels -1"
    pieright="Next Page:scrollchannels 1"

    onsize="StretchToBottom 18 21"

    look="7013" states="3" xstretch="4"
  />

  <button
    label="Box"
    x="1" y="140"
    width="31" height="20"
    labeldx="5" labeldy="4"
    pietouch=":gotopage Box"
    pieright=" TV:gotopage TV"
    pieup="DVR:gotopage DVR"
    piedown="VCR:gotopage VCR"
    onsize="StickToBottom 1"

    look="7014" states="2" stretch="4"
  />

  <button
    label=""
    x="32" y="140"
    width="88" height="20"
    labeldx="0" labeldy="4"
    source="currenttime"
    pietouch="Now:gotocurrenttime"
    pieup="Next 1/2 hour:changetime 30"
    piedown="Previous 1/2 hour:changetime -30"
    pieleft="Set Time:gototime"
    pieright="Set Day:gotodate"
    onsize="StickToBottom 1"

    look="7015" states="2" stretch="4"
  />

  <button
    label="Stations"
    x="120" y="140"
    width="39" height="20"
    labeldx="1" labeldy="4"

    xpietouch=" Details:gotopage Show Details"
    xpiedown="Stations:gotopage Stations"
    xpieup="Category:Browse Categories"

    pietouch=":gotopage Stations"
    piedown="Category:Browse Categories"
    pieup=" Details:gotopage Show Details"
    onsize="StickToBottom 1"

    look="7010" states="2" stretch="4"  
  />

</gui>
